root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4
indent_style = space
max_line_length = 100
quote_type = single

[*.md]
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[Makefile]
indent_style = tab
